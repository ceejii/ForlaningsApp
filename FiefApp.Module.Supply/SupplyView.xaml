            HorizontalAlignment="Right"
            VerticalContentAlignment="Center"
            Padding="0"
            Template="{DynamicResource ButtonTemplate}"/>

        <Label
            Content="{Binding Path=DataModel.TransactionLuxury}"
            Grid.Column="10"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalContentAlignment="Center"
            FontWeight="Bold"
            Foreground="OrangeRed"
            Padding="0"/>


        <Label
            Content="Järn"
            Grid.Column="13"
            Grid.Row="1"
            HorizontalAlignment="Right"
            VerticalContentAlignment="Center"
            Padding="0"/>

        <TextBox
            Text="{Binding Path=DataModel.SupplyIron}"
            Grid.Column="15"
            Grid.Row="1"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            Template="{DynamicResource TextBoxTemplate}"
            Padding="0,0,6,0"
            IsReadOnly="True"/>

        <TextBox
            Text="{Binding Path=DataModel.AmountIron}"
            Grid.Column="13"
            Grid.ColumnSpan="3"
            Grid.Row="3"
            Width="65"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            Template="{DynamicResource TextBoxTemplate}"
            behaviors:TextBoxBehavior.SelectAllTextOnFocus="True"
            Padding="0,0,6,0"/>

        <Button
            Content="ändra"
            Grid.Column="15"
            Grid.Row="3"
            Width="51"
            Command="{Binding Path=ModifyIronToSupply}"
            HorizontalAlignment="Right"
            VerticalContentAlignment="Center"
            Padding="0"
            Template="{DynamicResource ButtonTemplate}"/>

        <Label
            Content="{Binding Path=DataModel.TransactionIron}"
            Grid.Column="14"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalContentAlignment="Center"
            FontWeight="Bold"
            Foreground="OrangeRed"
            Padding="0"/>


        <Label
            Content="Sten"
            Grid.Column="17"
            Grid.Row="1"
            HorizontalAlignment="Right"
            VerticalContentAlignment="Center"
            Padding="0"/>

        <TextBox
            Text="{Binding Path=DataModel.SupplyStone}"
            Grid.Column="19"
            Grid.Row="1"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            Template="{DynamicResource TextBoxTemplate}"
            Padding="0,0,6,0"
            IsReadOnly="True"/>

        <TextBox
            Text="{Binding Path=DataModel.AmountStone}"
            Grid.Column="17"
            Grid.ColumnSpan="3"
            Grid.Row="3"
            Width="65"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            Template="{DynamicResource TextBoxTemplate}"
            behaviors:TextBoxBehavior.SelectAllTextOnFocus="True"
            Padding="0,0,6,0"/>

        <Button
            Content="ändra"
            Grid.Column="19"
            Grid.Row="3"
            Width="51"
            Command="{Binding Path=ModifyStoneToSupply}"
            HorizontalAlignment="Right"
            VerticalContentAlignment="Center"
            Padding="0"
            Template="{DynamicResource ButtonTemplate}"/>

        <Label
            Content="{Binding Path=DataModel.TransactionStone}"
            Grid.Column="18"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalContentAlignment="Center"
            FontWeight="Bold"
            Foreground="OrangeRed"
            Padding="0"/>


        <Label
            Content="Timmer"
            Grid.Column="21"
            Grid.Row="1"
            HorizontalAlignment="Right"
            VerticalContentAlignment="Center"
            Padding="0"/>

        <TextBox
            Text="{Binding Path=DataModel.SupplyWood}"
            Grid.Column="23"
            Grid.Row="1"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            Template="{DynamicResource TextBoxTemplate}"
            Padding="0,0,6,0"
            IsReadOnly="True"/>

        <TextBox
            Text="{Binding Path=DataModel.AmountWood}"
            Grid.Column="21"
            Grid.ColumnSpan="3"
            Grid.Row="3"
            Width="65"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            Template="{DynamicResource TextBoxTemplate}"
            behaviors:TextBoxBehavior.SelectAllTextOnFocus="True"
            Padding="0,0,6,0"/>

        <Button
            Content="ändra"
            Grid.Column="23"
            Grid.Row="3"
            Width="51"
            Command="{Binding Path=ModifyWoodToSupply}"
            HorizontalAlignment="Right"
            VerticalContentAlignment="Center"
            Padding="0"
            Template="{DynamicResource ButtonTemplate}"/>

        <Label
            Content="{Binding Path=DataModel.TransactionWood}"
            Grid.Column="22"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalContentAlignment="Center"
            FontWeight="Bold"
            Foreground="OrangeRed"
            Padding="0"/>
    </Grid>
</UserControl>
